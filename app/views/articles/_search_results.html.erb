    <div class="search-result-item__content">
      <div class="search-result-item__snapshot"></div>
      <div class="search-result-item__details">
        <div>Languages: <%= article.language %></div>
        <div><%= article.url %></div>
      </div>
    </div>
  </div>
</div>
